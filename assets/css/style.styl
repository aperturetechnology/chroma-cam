@import 'reset'

* {
    box-sizing: border-box;
}

a {
    color: #0088cc;
    text-decoration: none;
}

a:hover {
    color: #ff4800;
}

aside {
    bottom: 1em;
    left: 1em;
    overflow: scroll;
    position: absolute;
    top: 1em;
    width: 14em;
}

#main {
    margin-left: 15em;
}

header {
    background-color: #fff;
    padding: 1em 0;
    text-align: center;
}

h1 {
    font-size: 2em;
    font-weight: bold;
    margin-top: 0.5em;
    margin-bottom: 0.5em;
}

#backgrounds li {
    border: 1px solid #fff;
    cursor: pointer;
    float: left;
    height: 7em;
    overflow: hidden;
    position: relative;
    width: 7em;
}

#backgrounds img {
    height: 7em;
    width: 7em;
}

#backgrounds .icon {
    position: absolute;
    right: 0;
    bottom: 0;
    padding: 0.4em 0.6em 0.3em 0.8em;
    background-color: #000;
    color: #fff;
}

#source {
    display: none;
}

#output {
    display: block;
    margin: 0 auto;
}

#attribution {
    bottom: 1em;
    font-size: 1.2em;
    position: absolute;
    right: 1em;
}

.white-popup-block {
  background: #FFF;
  padding: 20px 30px;
  text-align: left;
  max-width: 650px;
  margin: 40px auto;
  position: relative;
}

button.mfp-close {
    color: #000;
}

.white-popup-block ul {
    margin-top: 1em;
}
